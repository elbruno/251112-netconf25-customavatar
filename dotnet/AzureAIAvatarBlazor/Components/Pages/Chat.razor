@page "/chat"
@using AzureAIAvatarBlazor.Models
@using AzureAIAvatarBlazor.Services
@using System.Text.Json
@using Microsoft.JSInterop
@inject IAzureOpenAIService OpenAIService
@inject IAzureAIAgentService AgentService
@inject IConfigurationService ConfigService
@inject IJSRuntime JSRuntime
@implements IAsyncDisposable
@rendermode InteractiveServer

<PageTitle>Chat - Azure AI Avatar</PageTitle>

<div class="container-fluid mt-3" style="position: relative; z-index: 10;">
    <div class="d-flex flex-wrap gap-2 mb-3 align-items-center glass-card p-2">
        @* Mode Indicator Badge *@
        @if (config != null)
        {
            var modeBadgeClass = config.AzureOpenAI.Mode switch
            {
                "Agent-AIFoundry" => "bg-info",
                "Agent-LLM" => "bg-success",
                "Agent-MicrosoftFoundry" => "bg-warning",
                _ => "bg-primary"
            };
            var modeDisplayText = config.AzureOpenAI.Mode switch
            {
                "Agent-AIFoundry" => "Agent: AI Foundry",
                "Agent-LLM" => "Agent: LLM",
                "Agent-MicrosoftFoundry" => "Agent: Microsoft Foundry",
                _ => "Direct LLM"
            };
            <span class="badge @modeBadgeClass px-3 py-2">
                <i class="bi bi-cpu me-1"></i>@modeDisplayText
            </span>
        }
        
        <div class="ms-2">
            <label class="form-label mb-0">Mode</label>
            <select class="form-select form-select-sm" @onchange="ModeChanged" value="@(config?.AzureOpenAI?.Mode)">
                <option value="LLM">LLM</option>
                <option value="Agent-LLM">Agent-LLM</option>
                <option value="Agent-AIFoundry">Agent-AIFoundry</option>
                <option value="Agent-MicrosoftFoundry">Agent-MicrosoftFoundry</option>
            </select>
        </div>

        <button class="btn btn-modern btn-sm px-3" @onclick="StartAvatarSession"
            disabled="@(isSessionActive || isSessionStarting)" title="Open Avatar Session">
            <i class="bi bi-play-circle me-1"></i>Open Session
        </button>
        <button class="btn btn-modern btn-modern-success btn-sm px-3" @onclick="ToggleMicrophone" 
            disabled="@(!isSessionActive)" title="@(isMicrophoneActive ? "Stop Microphone" : "Start Microphone")">
            <i class="bi @(isMicrophoneActive ? "bi-mic-mute" : "bi-mic") me-1"></i>@(isMicrophoneActive ? "Stop Mic" : "Start Mic")
        </button>
        <button class="btn btn-outline-secondary btn-sm" @onclick="StopSpeaking" 
            disabled="@(!isSpeaking)" title="Stop Speaking">
            <i class="bi bi-stop-fill"></i>
        </button>
        <button class="btn btn-outline-danger btn-sm" @onclick="ClearChatHistory" title="Clear Chat History">
            <i class="bi bi-trash"></i>
        </button>
        <button class="btn btn-outline-primary btn-sm" @onclick="StopSession" 
            disabled="@(!isSessionActive)" title="Close Avatar Session">
            <i class="bi bi-x-circle"></i>
        </button>
    </div>

    <div class="row g-3">
        <!-- Left: Avatar Video -->
        <div class="col-12 col-lg-8">
            <div class="card glass-card shadow-sm">
                <div class="card-body p-0">
                    <div id="videoContainer" class="video-container" style="min-height: 400px; background: linear-gradient(135deg, #2D1A4D 0%, #1A0D2E 100%); position: relative;">
                        <div id="remoteVideo"></div>
                        @if (config?.Avatar?.EnableSubtitles == true)
                        {
                            <div id="subtitles" class="subtitles"></div>
                        }
                        @if (isSessionStarting)
                        {
                            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(45, 26, 77, 0.9); display: flex; flex-direction: column; align-items: center; justify-content: center; z-index: 1000; backdrop-filter: blur(10px);">
                                <div class="spinner-border text-white" role="status" style="width: 3rem; height: 3rem; border-color: rgba(255,255,255,0.3); border-top-color: white;">
                                    <span class="visually-hidden">Loading...</span>
                                </div>
                                <p class="text-white mt-3" style="text-shadow: 1px 1px 4px rgba(0,0,0,0.5);">Connecting to avatar...</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Right: Conversation -->
        <div class="col-12 col-lg-4">
            <div class="card glass-card shadow-sm h-100">
                <div class="card-header" style="background: rgba(91, 45, 144, 0.1); border-bottom: 2px solid rgba(91, 45, 144, 0.2);">
                    <h5 class="mb-0" style="color: #2D1A4D;"><i class="bi bi-chat-dots me-2" style="color: #5B2D90;"></i>Conversation</h5>
                </div>
                <div class="card-body d-flex flex-column p-0" style="height: 400px;">
                    <!-- Chat messages area with bubbles -->
                    <div class="chat-messages-container flex-grow-1 overflow-auto p-3" id="chatContainer">
                        @foreach (var message in chatMessages.Where(m => m.Role != "system"))
                        {
                            <div
                                class="chat-message-wrapper @(message.Role == "user" ? "user-message" : "assistant-message")">
                                <div class="chat-bubble @(message.Role == "user" ? "user-bubble" : "assistant-bubble")">
                                    <div class="chat-bubble-header">@GetMessageLabel(message.Role)</div>
                                    <div class="chat-bubble-content">@message.Content</div>
                                </div>
                            </div>
                        }
                        @if (isTyping)
                        {
                            <div class="chat-message-wrapper assistant-message">
                                <div class="chat-bubble assistant-bubble">
                                    <div class="chat-bubble-header">@(config?.Avatar?.AssistantLabel ?? "AI Avatar")</div>
                                    <div class="typing-indicator">
                                        <span></span><span></span><span></span>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <!-- Input area -->
                    <div class="chat-input-container border-top p-3">
                        <div class="d-flex flex-wrap gap-2 mb-2">
                            @if (config?.PredefinedQuestions != null)
                            {
                                var validQuestions = config.PredefinedQuestions.Where(p => !string.IsNullOrWhiteSpace(p.Question)).ToList();
                                if (validQuestions.Count > 0)
                                {
                                    foreach (var pq in validQuestions)
                                    {
                                        var qText = pq.Question ?? string.Empty;
                                        var btnLabel = string.IsNullOrWhiteSpace(pq.Title)
                                            ? (pq.Question?.Length > 30 ? pq.Question[..30] + "..." : pq.Question)
                                            : pq.Title;
                                        <button type="button" class="btn btn-outline-secondary btn-sm" @onclick="() => SendPredefinedMessage(qText)" disabled="@(!isSessionActive)">
                                            @btnLabel
                                        </button>
                                    }
                                }
                                // If no valid questions, render nothing (no hardcoded fallbacks)
                            }
                        </div>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Type a message..." @bind="userMessage"
                                @bind:event="oninput" @onkeydown="HandleKeyPress" disabled="@(!isSessionActive)"
                                id="messageInput" style="border-color: rgba(91, 45, 144, 0.3);">
                            <button class="btn btn-modern" @onclick="SendMessage"
                                disabled="@(!isSessionActive || string.IsNullOrWhiteSpace(userMessage))">
                                <i class="bi bi-send"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private AvatarConfiguration? config;
    private List<ChatMessage> chatMessages = new();
    private string userMessage = string.Empty;
    private bool isSessionActive = false;
    private bool isSessionStarting = false;
    private bool isSpeaking = false;
    private bool isTyping = false;
    private bool isMicrophoneActive = false;
    private DotNetObjectReference<Chat>? dotNetReference;

    protected override async Task OnInitializedAsync()
    {
        Console.WriteLine("[Init] Initializing Chat component...");
        try
        {
            config = ConfigService.GetConfiguration();
            Console.WriteLine("[Init] Configuration loaded successfully");
            Console.WriteLine($"[Init] Avatar Character: {config?.Avatar?.Character ?? "null"}");
            Console.WriteLine($"[Init] Azure Speech Region: {config?.AzureSpeech?.Region ?? "null"}");
            Console.WriteLine($"[Init] Azure OpenAI Endpoint: {config?.AzureOpenAI?.Endpoint ?? "null"}");

            // Add system message (not displayed in UI, but used for API calls)
            if (!string.IsNullOrEmpty(config.AzureOpenAI.SystemPrompt))
            {
                chatMessages.Add(new ChatMessage
                {
                    Role = "system",
                    Content = config.AzureOpenAI.SystemPrompt
                });
                Console.WriteLine($"[Init] System prompt added ({config.AzureOpenAI.SystemPrompt.Length} characters)");
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"[Init] ERROR during initialization: {ex.Message}");
            Console.WriteLine($"[Init] Stack trace: {ex.StackTrace}");
        }
        await Task.CompletedTask;
    }

    private string GetMessageLabel(string role)
    {
        if (config == null) return role;

        return role.ToLower() switch
        {
            "user" => config.Avatar.UserLabel ?? "User",
            "assistant" => config.Avatar.AssistantLabel ?? "AI Avatar",
            _ => role
        };
    }

    private string GetCurrentMode()
    {
        if (config == null) return "LLM";
        return config.AzureOpenAI.Mode ?? "LLM";
    }

    private async Task ModeChanged(ChangeEventArgs e)
    {
        try
        {
            var newMode = e.Value?.ToString() ?? "LLM";
            Console.WriteLine($"Mode changed to: {newMode}");

            if (config == null)
            {
                config = ConfigService.GetConfiguration();
            }

            config.AzureOpenAI.Mode = newMode;
            await ConfigService.SaveConfigurationAsync(config);

            // Reset agent to pick up new configuration
            try
            {
                await AgentService.ResetAgentAsync();
            }
            catch (NotImplementedException nie)
            {
                // Show friendly system message to user
                HandleAgentNotImplemented(nie);
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error changing mode: {ex.Message}");
        }
    }

    private async Task ScrollToBottom()
    {
        try
        {
            await JSRuntime.InvokeVoidAsync("scrollChatToBottom");
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error scrolling to bottom: {ex.Message}");
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            Console.WriteLine("[Render] First render - initializing Avatar SDK...");
            try
            {
                dotNetReference = DotNetObjectReference.Create(this);
                Console.WriteLine("[Render] DotNetObjectReference created");
                await JSRuntime.InvokeVoidAsync("initializeAvatarSDK", dotNetReference);
                Console.WriteLine("[Render] Avatar SDK initialized successfully");
            }
            catch (Exception ex)
            {
                Console.WriteLine($"[Render] ERROR initializing Avatar SDK: {ex.Message}");
                Console.WriteLine($"[Render] Stack trace: {ex.StackTrace}");
            }
        }
    }

    private async Task StartAvatarSession()
    {
        await JSRuntime.InvokeVoidAsync("console.log", "[Session] ========================================");
        await JSRuntime.InvokeVoidAsync("console.log", "[Session] START AVATAR SESSION BUTTON CLICKED");
        await JSRuntime.InvokeVoidAsync("console.log", "[Session] ========================================");
        try
        {
            if (config == null)
            {
                await JSRuntime.InvokeVoidAsync("console.error", "[Session] ERROR: config is null!");
                throw new Exception("Configuration not loaded. Please refresh the page.");
            }

            await JSRuntime.InvokeVoidAsync("console.log", "[Session] Setting isSessionStarting = true...");
            isSessionStarting = true;
            StateHasChanged();
            await JSRuntime.InvokeVoidAsync("console.log", "[Session] UI updated with loading state");

            // Validate configuration before proceeding
            await JSRuntime.InvokeVoidAsync("console.log", "[Session] Validating configuration...");
            var validationError = await ConfigService.ValidateConfigurationAsync(config);
            if (validationError != null)
            {
                await JSRuntime.InvokeVoidAsync("console.error", $"[Session] VALIDATION FAILED: {validationError}");
                throw new Exception($"Configuration error: {validationError}");
            }
            await JSRuntime.InvokeVoidAsync("console.log", "[Session] Configuration validation passed");

            // Serialize config with camelCase for JavaScript
            await JSRuntime.InvokeVoidAsync("console.log", "[Session] Serializing config to JSON...");
            var options = new JsonSerializerOptions
            {
                PropertyNamingPolicy = JsonNamingPolicy.CamelCase,
                WriteIndented = true
            };
            var configJson = JsonSerializer.Serialize(config, options);
            await JSRuntime.InvokeVoidAsync("console.log", $"[Session] Config JSON (length: {configJson.Length} chars):");
            await JSRuntime.InvokeVoidAsync("console.log", configJson);

            await JSRuntime.InvokeVoidAsync("console.log", "[Session] Calling JavaScript function: startAvatarSessionFromJson");
            await JSRuntime.InvokeVoidAsync("startAvatarSessionFromJson", configJson);
            
            await JSRuntime.InvokeVoidAsync("console.log", "[Session] JavaScript call completed successfully");
            isSessionActive = true;
            isSessionStarting = false;
            StateHasChanged();
            await JSRuntime.InvokeVoidAsync("console.log", "[Session] Avatar session started successfully!");
        }
        catch (Exception ex)
        {
            var errorMessage = ex.Message ?? string.Empty;
            var stackTrace = ex.StackTrace ?? "<no stack trace>";
            var isCancellation = errorMessage.Contains("Avatar start cancelled", System.StringComparison.OrdinalIgnoreCase);

            await JSRuntime.InvokeVoidAsync("console.error", "[Session] ========================================");
            await JSRuntime.InvokeVoidAsync("console.error", $"[Session] ERROR OCCURRED: {(isCancellation ? "CANCELLED" : "FAILED")}");
            await JSRuntime.InvokeVoidAsync("console.error", "[Session] ========================================");
            await JSRuntime.InvokeVoidAsync("console.error", $"[Session] Exception type: {ex.GetType().Name}");
            await JSRuntime.InvokeVoidAsync("console.error", $"[Session] Error message: {errorMessage}");
            
            if (!isCancellation)
            {
                await JSRuntime.InvokeVoidAsync("console.error", $"[Session] Stack trace:");
                await JSRuntime.InvokeVoidAsync("console.error", stackTrace);
                
                if (ex.InnerException != null)
                {
                    await JSRuntime.InvokeVoidAsync("console.error", $"[Session] Inner exception: {ex.InnerException.Message}");
                    await JSRuntime.InvokeVoidAsync("console.error", $"[Session] Inner stack trace: {ex.InnerException.StackTrace}");
                }
            }
            
            isSessionActive = false;
            isSessionStarting = false;
            StateHasChanged();

            if (!isCancellation)
            {
                // Show error to user
                chatMessages.Add(new ChatMessage
                {
                    Role = "system",
                    Content = $"Error starting avatar: {errorMessage}"
                });
                StateHasChanged();
            }
        }
    }

    private async Task StopSession()
    {
        await JSRuntime.InvokeVoidAsync("console.log", "[Button Click] STOP SESSION button clicked");
        try
        {
            await JSRuntime.InvokeVoidAsync("stopAvatarSession");
            isSessionActive = false;
            isMicrophoneActive = false;
            isSessionStarting = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error stopping avatar session: {ex.Message}");
        }
    }

    private async Task ToggleMicrophone()
    {
        await JSRuntime.InvokeVoidAsync("console.log", $"[Button Click] TOGGLE MICROPHONE button clicked (current state: {(isMicrophoneActive ? "active" : "inactive")})");
        try
        {
            if (!isMicrophoneActive)
            {
                await JSRuntime.InvokeVoidAsync("startMicrophone");
            }
            else
            {
                await JSRuntime.InvokeVoidAsync("stopMicrophone", false);
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error starting microphone: {ex.Message}");
        }
    }

    private async Task StopSpeaking()
    {
        await JSRuntime.InvokeVoidAsync("console.log", "[Button Click] STOP SPEAKING button clicked");
        try
        {
            await JSRuntime.InvokeVoidAsync("stopSpeaking");
            isSpeaking = false;
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error stopping speaking: {ex.Message}");
        }
    }

    private async void ClearChatHistory()
    {
        await JSRuntime.InvokeVoidAsync("console.log", "[Button Click] CLEAR CHAT HISTORY button clicked");
        // Keep system message, clear the rest
        var systemMessage = chatMessages.FirstOrDefault(m => m.Role == "system");
        chatMessages.Clear();
        if (systemMessage != null)
        {
            chatMessages.Add(systemMessage);
        }
        StateHasChanged();
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(userMessage))
        {
            await SendMessage();
        }
    }

    private async Task SendMessage()
    {
        await JSRuntime.InvokeVoidAsync("console.log", "[Button Click] SEND MESSAGE button clicked");
        await ProcessOutgoingMessageAsync(userMessage, clearInput: true);
    }

    private Task SendPredefinedMessage(string presetMessage) => ProcessOutgoingMessageAsync(presetMessage, clearInput:
    true);

    private async Task ProcessOutgoingMessageAsync(string? content, bool clearInput)
    {
        if (string.IsNullOrWhiteSpace(content))
        {
            if (clearInput && !string.IsNullOrEmpty(userMessage))
            {
                userMessage = string.Empty;
                StateHasChanged();
            }
            return;
        }

        var message = content.Trim();

        if (clearInput)
        {
            userMessage = string.Empty;
            StateHasChanged();
        }

        Console.WriteLine($"Sending message: {message}");

        // Add user message to history
        chatMessages.Add(new ChatMessage { Role = "user", Content = message });
        isTyping = true;
        StateHasChanged();
        await ScrollToBottom();

        try
        {
            Console.WriteLine("Getting chat completion from OpenAI...");

            // Get messages for API (including system message)
            var messagesForAPI = chatMessages.Select(m => new ChatMessage
            {
                Role = m.Role,
                Content = m.Content
            }).ToList();

            var assistantResponse = new System.Text.StringBuilder();

            // Use the appropriate service based on mode
            var mode = config?.AzureOpenAI.Mode ?? "LLM";

            if (mode == "LLM")
            {
                Console.WriteLine("Using LLM mode (standard OpenAI service)");
                await foreach (var chunk in OpenAIService.GetChatCompletionStreamAsync(messagesForAPI))
                {
                    assistantResponse.Append(chunk);
                }
            }
            else if (mode == "Agent-LLM" || mode == "Agent-AIFoundry" || mode == "Agent-MicrosoftFoundry")
            {
                Console.WriteLine($"Using {mode} mode (Agent Framework)");
                await foreach (var chunk in AgentService.GetChatCompletionStreamAsync(messagesForAPI))
                {
                    assistantResponse.Append(chunk);
                }
            }
            else
            {
                throw new InvalidOperationException($"Unsupported mode: {mode}");
            }

            var fullResponse = assistantResponse.ToString();
            Console.WriteLine($"Received response: {fullResponse.Substring(0, Math.Min(100, fullResponse.Length))}...");

            chatMessages.Add(new ChatMessage { Role = "assistant", Content = fullResponse });
            StateHasChanged();
            await ScrollToBottom();

            // Speak the response using avatar
            if (isSessionActive)
            {
                Console.WriteLine("Speaking text via avatar...");
                isSpeaking = true;
                StateHasChanged();

                try
                {
                    await JSRuntime.InvokeVoidAsync("speakText", fullResponse);
                    Console.WriteLine("✅ Avatar speech completed successfully");
                }
                catch (Exception speakEx)
                {
                    Console.WriteLine($"⚠️ Speech error: {speakEx.Message}");
                    // Don't throw - allow conversation to continue
                }
                finally
                {
                    isSpeaking = false;
                }
            }
            else
            {
                Console.WriteLine("Avatar session not active, skipping speech");
            }
        }
        catch (NotImplementedException nie)
        {
            Console.WriteLine($"Mode not implemented: {nie.Message}");
            HandleAgentNotImplemented(nie);
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error in chat: {ex.Message}");
            Console.WriteLine($"Stack trace: {ex.StackTrace}");
            chatMessages.Add(new ChatMessage
            {
                Role = "assistant",
                Content = "An error occurred while processing the request."
            });
            StateHasChanged();
        }
        finally
        {
            isTyping = false;
            isSpeaking = false;
            StateHasChanged();
        }
    }

    [JSInvokable("OnSpeechRecognized")]
    public async Task OnSpeechRecognizedAsync(string text)
    {
        if (string.IsNullOrWhiteSpace(text))
            return;

        Console.WriteLine($"Speech recognized: {text}");

        await InvokeAsync(() =>
        {
            userMessage = text;
            StateHasChanged();
        });

        await InvokeAsync(async () => await SendMessage());
    }

    [JSInvokable("OnMicrophoneStateChanged")]
    public async Task OnMicrophoneStateChangedAsync(bool active)
    {
        await InvokeAsync(() =>
        {
            isMicrophoneActive = active;
            StateHasChanged();
        });
    }

    private void HandleAgentNotImplemented(NotImplementedException nie)
    {
        // Add a system message to notify the user
        chatMessages.Add(new ChatMessage { Role = "system", Content = $"Selected agent mode is not available: {nie.Message}" });
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        if (dotNetReference != null)
        {
            dotNetReference.Dispose();
            dotNetReference = null;
        }

        await Task.CompletedTask;
    }
}