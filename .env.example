# Azure AI Foundry TTS Avatar Demo - Environment Variables
# Copy this file to .env and fill in your actual values
# Note: .env files should never be committed to version control

# Azure Speech Service Configuration
AZURE_SPEECH_API_KEY=your_speech_api_key_here
AZURE_SPEECH_REGION=westus2
AZURE_SPEECH_PRIVATE_ENDPOINT=https://your-custom-name.cognitiveservices.azure.com/

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your_openai_api_key_here
AZURE_OPENAI_DEPLOYMENT_NAME=your_deployment_name

# Chat behavior
# System prompt to steer the assistant's behavior in chat
SYSTEM_PROMPT=You are an AI assistant that helps people find information.
PROMPT_PROFILE=pablito-piova-es
# Enforce that the selected profile is always applied on load
PROMPT_ENFORCE_PROFILE=true
# Variables used by prompt profiles/templates (will become {{tone}} and {{format}})
PROMPT_VAR_tone=helpful
PROMPT_VAR_format=concise

# Azure Cognitive Search Configuration (for On Your Data scenarios)
AZURE_COGNITIVE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_COGNITIVE_SEARCH_API_KEY=your_search_api_key_here
AZURE_COGNITIVE_SEARCH_INDEX_NAME=your_index_name

# TTS Configuration
TTS_VOICE=en-US-AvaMultilingualNeural
CUSTOM_VOICE_ENDPOINT_ID=your_custom_voice_endpoint_id

# Avatar Configuration
AVATAR_CHARACTER=lisa
AVATAR_STYLE=casual-sitting

# Optional: Base URL for the application (useful for deployment)
BASE_URL=https://your-app-domain.com

# Optional: Feature flags
ENABLE_CONTINUOUS_CONVERSATION=false
ENABLE_SUBTITLES=true
ENABLE_AUTO_RECONNECT=true
